<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <TextView
        android:text="Seu IMC é:"
        android:textColor="@color/purple_700"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textview_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="16dp"
        tools:text="27.104"
        android:maxLength="5"
        android:textSize="38dp"
        />

    <TextView
        android:id="@+id/textView_classificacao"
        tools:text="Classificação: Normal"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VEJA A TABELA DO IMC ABAIXO:"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_margin="18dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18,5 ou menos - Abaixo do Normal"
        android:paddingLeft="10dp"
        android:layout_margin="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entre 18,6 a 24,9 - Peso normal"
        android:paddingLeft="10dp"
        android:layout_margin="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Entre 25,0 e 29,9 - Sobrepeso"
        android:layout_margin="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Entre 30,0 e 34,9 - Obesidade Grau 1"
        android:layout_margin="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Entre 35,0 e 39,9 - Obesidade Grau 2"
        android:layout_margin="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Acima de 40,0 - Obesidade grau 3"
        android:layout_margin="16dp" />



</LinearLayout>